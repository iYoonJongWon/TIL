var num=0
for (num in 0..500 step 50){
    var num = num
    println(num) // 0부터 시작해 50배수로 나열
}
println(num)

var x = 1
while (x < 9) {
    x = ++x
    var y = 1
    while (y < 9) {
        y = ++y
        println("$x * $y = ${x * y}")
    }
}
